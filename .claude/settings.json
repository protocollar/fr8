{
  "permissions": {
    "allow": [
      "Bash(go:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(git rev-parse:*)",
      "Bash(git ls-tree:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git worktree:*)",
      "Bash(git mv:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run view:*)",
      "Bash(ls:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ps:*)",
      "Bash(lsof:*)",
      "Bash(wc:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)",
      "Bash(xargs:*)",
      "Bash(golangci-lint:*)",
      "mcp__claude-in-chrome__*",
      "mcp__playwright__*"
    ],
    "deny": [
      "Edit(go.mod)",
      "Edit(go.sum)",
      "Write(go.mod)",
      "Write(go.sum)"
    ],
    "ask": [],
    "additionalDirectories": [],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/support/hooks/check-race-flag.sh",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/support/hooks/check-staged-changes.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "env": {},
  "attribution": {
    "commit": "",
    "pr": ""
  }
}
